# GraphQL API Configuration
NEXT_PUBLIC_API_URL=http://localhost:4000/graphql

# Feature Flags
# Set to 'false' to disable user statistics when backend resolver is not available
NEXT_PUBLIC_ENABLE_USER_STATS=true

# Development/Debug Settings
# Set to 'true' to enable detailed GraphQL error logging
NEXT_PUBLIC_DEBUG_GRAPHQL=false

# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your_r2_bucket_name
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://your_custom_domain.com
# Optional: Use custom domain for public file access
# R2_PUBLIC_URL=https://files.yourdomain.com

# Add other environment variables as needed
# DATABASE_URL=
# NEXTAUTH_SECRET=
# NEXTAUTH_URL=
